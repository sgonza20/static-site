{
  "name": "static-site",
  "version": "0.1.0",
  "bin": {
    "static-site": "bin/static-site.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "eslint": "eslint . --ext .ts --max-warnings 0"
  },
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com",
    "organization": true
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.1",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "aws-cdk": "2.113.0",
    "eslint": "^8.32.0",
    "eslint-config-standard-with-typescript": "^27.0.1",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-junit": "^15.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "dependencies": {
    "aws-cdk-lib": "2.113.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "standard-with-typescript",
    "overrides": [],
    "parserOptions": {
      "ecmaVersion": "latest",
      "project": "tsconfig.json"
    },
    "rules": {
      "no-new": "off",
      "no-undef": "off"
    }
  },
  "jest": {
    "collectCoverage": true,
    "roots": [
      "<rootDir>/test"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputName": "test-report.xml"
        }
      ]
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
